{
    "compilerOptions": {
      "target": "ES2018",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": false,
      "downlevelIteration": true,
      "baseUrl": ".",
      "outDir": "tsc",
      "rootDir": "./src",
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": true,
      "declaration": true
    },
    "include": ["src/**/*.ts"]
  }